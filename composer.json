{
    "name": "pxgamer/changenow",
    "type": "library",
    "description": "A PHP wrapper for the ChangeNOW API.",
    "license": "MIT",
    "require": {
        "php": "^7.1",
        "guzzlehttp/guzzle": "^7.0.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^6.0 || ^7.0",
        "squizlabs/php_codesniffer": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "pxgamer\\ChangeNow\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "pxgamer\\ChangeNow\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs src tests",
        "fix-style": "phpcbf src tests"
    }
}
